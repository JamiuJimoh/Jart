<%-include("../partials/header") %>

<div class="section">
    <div class="container">
        <section class="hero is-light is-medium">
            <div class="hero-body">
              <div class="container">
                <article class="media">
                    <div class="media-left">
                        <figure>
                            <img class="profile-image" src="<%=user.avatar%>" alt="">
                        </figure>
                    </div>
                    <div class="media-content">
                        <div class="content">
                            <h1 class="profile-name"><%=user.firstName%> <%=user.lastName%></h1>
                        </div>
                        <% if( currUser && user._id.equals(currUser._id)){ %>
                            <a href="/users/<%=user._id%>/edit" class="button is-success">EDIT PROFILE</a>
                        <%}else{%>
                            <a href="/follow/<%= user.id %>" class="button is-link">
                                FOLLOW
                            </a>
                        <%}%>
                        <p class="bio"><%=user.bio%></p>
                    </div>
                </article>
              </div>
            </div>
          </section>

          <% if(artworks.length===0){ %>
            <div class="box">
                <div class="notification">
                    <p>No posts yet</p> 
                </div>
            </div>
          <% } else{ %>
            <% artworks.forEach(artwork=>{ %>
                <div class="box" id="boxes">
                    <article class="media">
                        <div class="media-left">
                            <figure class="image is-96x96">
                                <a href="/artworks/<%=artwork._id%>" class="ui medium image">
                                    <img src="<%=artwork.image%>">
                                </a>
                            </figure>
                        </div>
                        <div class="media-content">
                            <div class="content">
                                <h2 class="title"><a href="/artworks/<%=artwork._id%>"><%=artwork.title %></a></h2>
                                <p>
                                    <small><a href="/users/<%=artwork.author.id%>">@<%=artwork.author.username%></a> <%= moment(artwork.createdAt).fromNow()%></small>
                                    <br>
                                    <%=artwork.content.substring(0, 100)%> ...
                                </p>
                            </div>
                            <% if(artwork.likes.length < 1){ %>
                                <span><i class="far fa-heart"></i> <%= artwork.likes.length %> reaction </span> 
                                <span style="padding-left: 20px;"><i class="far fa-comments"></i> <%= artwork.comments.length %> comment </span> 
                            <% }else{ %>
                                <span><i class="fas fa-heart"></i> <%= artwork.likes.length %> reactions </span> 
                                <span style="padding-left: 20px;"><i class="fas fa-comments"></i> <%= artwork.comments.length %> comments </span> 
                            <% } %> 
                        </div>
                    </article>
                </div>
            <% }) %>

          <%}%>
    </div>
</div>

<%-include("../partials/footer") %>
