<%-include("../partials/header")%>

<div class="section">
    <div class="container"> 
        <div class="section">
            <div class="container"> 

                <div class="box" id="image-box">
                    <div class="box" id="image-box">
                        <img class="ui fluid image" id="show-image" src="<%=foundArtwork.image%>" alt="">
                    </div>

                    <div class="text-box">
                        <h1 class="title is-2 has-text-black-ter"><%=foundArtwork.title%></h1>
                        <div class="show-date">
                            <p>
                                <span id="image" href="" class="">
                                    <img class="rounded" src="<%=foundArtwork.author.avatar%>">
                                </span>
                                <a href="/users/<%=foundArtwork.author.id%>">@<%=foundArtwork.author.username%></a>   <span><small><em><%= moment(foundArtwork.createdAt).fromNow() %></em></small></span>
                            </p>
                        </div>
                        <p><%=foundArtwork.content%></p>

                        
                        <form id="btn" action="/artworks/<%= foundArtwork._id %>/like" method="POST">
                            <% if (currUser && foundArtwork.likes.some(function (like) { return like.equals(currUser._id)})) { %>
                                <div class="tag-container">
                                    <div class="tags has-addons are-medium">
                                        <button class="tag">
                                            <a href=""><i class="fas fa-heart"></i></a>
                                        </button>
                                        <span class="tag is-link">
                                            Likes (<%= foundArtwork.likes.length %>)
                                        </span>
                                    </div>
                                </div>
                                <% } else { %>
                                <div class="tag-container">
                                    <div class="tags has-addons are-medium">
                                        <button class="tag">
                                            <a href=""><i class="far fa-heart"></i></a>
                                        </button>
                                        <span class="tag is-link">
                                            Like (<%= foundArtwork.likes.length %>)
                                        </span>
                                    </div>
                                </div>
                            <% } %>
                        </form>
                    
                        <% if( currUser && foundArtwork.author.id.equals(currUser._id) || currUser && currUser.isAdmin){ %>
                            <div class="btn">
                                <a href="/artworks/<%=foundArtwork.id%>/edit" class="button is-link is-outlined">Edit</a>
                                <form class="inline-btn" action="/artworks/<%=foundArtwork._id%>?_method=DELETE" method="POST">
                                    <button type="submit" class="button is-danger is-outlined">Delete</button>
                                </form>
                            </div>
                        <% } %>         
                    </div>
                </div>
                                
                <% if(currUser){ %>
                    <div class="box">
                        <form  class="ui form" action="/artworks/<%=foundArtwork.id%>/comments" method="POST">
                            <div class="field">
                                <h1 class="title is-3">Discussion</h1>
                                <textarea class="textarea"  name="comment[text]" id="textarea" cols="30" rows="10" placeholder="Write a comment..."></textarea>
                                <div >
                                    <button id="btn" class="button is-dark is-outlined" type="submit">Comment</button>
                                </div>
                            </div>
                        </form>
                    </div>
                <% } %>
                <% foundArtwork.comments.forEach(comment=>{%>  
                <div class="box">
                    <div class="media">
                            <div class="media-left">
                                <figure href="" class="">
                                    <img class="rounded-img-comment" src="<%=comment.author.avatar%>">
                                </figure>
                            </div>
                            <div class="media-content">
                                <div class="content">
                                    <p>
                                        <a href="/users/<%=comment.author.id%>">@<%=comment.author.username%>  </a><span><small><em> <%= moment(comment.createdAt).fromNow()%></span></em></small>
                                        <br>
                                        <%=comment.text%>
                                    </p>
                                    <% if( currUser && comment.author.id.equals(currUser._id) || currUser && currUser.isAdmin){ %>
                                        <a href="/artworks/<%=foundArtwork._id%>/comments/<%=comment._id%>/edit">Edit</a>
                                    <% } %>
                                </div>
                            </div>
                            <% if( currUser && comment.author.id.equals(currUser._id) || currUser && currUser.isAdmin){ %>
                                <form class="inline-btn" action="/artworks/<%=foundArtwork._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                                    <button type="submit" class="delete"></button>

                                </form>
                            <% } %>
                        </div>
                    </div>
                <% }) %>

            </div>
        </div>
    </div>
</div>

<%-include("../partials/footer")%>