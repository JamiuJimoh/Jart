<%-include("../partials/header")%>
<h1 id="segment">Share Your Jart</h1>
<div id="form" class="ui container">
    <form class="ui form" action="/artworks" method="POST">
        <div class="field" >
            <label for="">Title</label>
            <input name="artwork[title]" type="text">
        </div>
        <div class="field" >
            <label for="">Image</label>
            <input name="artwork[image]" type="text">
        </div>
        <div class="field" >
            <label for="">About</label>
            <textarea name="artwork[content]" id="" cols="30" rows="10"></textarea>
        </div>
        <button type="submit" class="ui orange button">Share</button>
    </form>
</div>

