<%-include("../partials/header")%>


<div class="container">
    <div class="media shadow-sm p-3 bg-white rounded" id="post-media">
      <div class="media-body">
        <form action="/artworks/<%=artwork._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
  
          <div class="form-group">
            <input id="input" class="form-control change" name="title" value="<%=artwork.title%>" placeholder="New post title here..." type="text">
          </div>
  
          <div class="form-group">
            <label class="file-label">
              <input class="file-input form-control-file" type="file" accept="image/*" name="image">
            </label>
          </div>
          <textarea id="input" placeholder="Write your post content here..." class="form-control chang" name="content" id="" cols="30" rows="10"><%=artwork.content%></textarea>
          <button type="submit" class="btn btn-secondary float-right">Publish</button>
        </form>
      </div>
    </div>
  </div>



<%-include("../partials/footer")%>
